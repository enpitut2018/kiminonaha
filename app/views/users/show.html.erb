<div class="font_size">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<h1><%= @user.name %>さん　のマイページ</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.image %></td>
        <td><%= link_to '詳細', "#" %></td>
        <td><%= link_to '編集', "#" %></td>
        <td><%= link_to '登録削除', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '知人の追加', new_user_profile_path(@user) %>


<%= link_to 'アカウント編集', edit_user_path(@user) %> |
<%= link_to '戻る', users_path %>

</div>