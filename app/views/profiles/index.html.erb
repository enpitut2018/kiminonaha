<p id="notice"><%= notice %></p>

<h1><%= @user.name%>さん のマイページ</h1>
あなたの知人が表示されます<br>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>氏名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.image.to_s ,:size => '200x260' %></td>
        <td><%= link_to profile.name, profile %></td>
        <td><%= link_to '編集', edit_profile_path(profile) %></td>
        <td><%= link_to '項目削除', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

