<p id="notice"><%= notice %></p>

<h1><%= @user.name%>'s Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Event</th>
      <th>Place</th>
      <th>Tags_text</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.image.to_s ,:size => '200x260' %></td>
        <td><%= profile.name %></td>
        <td><%= profile.Event %></td>>
        <td><%= profile.Place %></td>>
        <td><%= profile.tags_text %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
